{
    "steps": [{
        "id": "install_react_app_dependencies",
        "name": "node",
        "dir": "client",
        "entrypoint": "npm",
        "args": ["install"]
    }, {
        "id": "add_env_variables",
        "name": "gcr.io/cloud-builders/gcloud",
        "entrypoint": "bash",
        "args": ["-c", "sed -i 's/%FLASK_TOKEN%/'${_FLASK_TOKEN}'/g' -i 's/%SECRET_KEY%/''${_SECRET_KEY}''/g' -i 's/%MONGO_URI%/'${_MONGO_URI}'/g' app.yaml", "gcloud app deployâ€Š app.yaml"]
    }, {
        "id": "build_react_app",
        "name": "node",
        "dir": "client",
        "entrypoint": "npm",
        "args": ["run", "build"]
    }, {
        "id": "deploy",
        "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
        "entrypoint": "gcloud",
        "args": ["app", "deploy"]
    }]
}