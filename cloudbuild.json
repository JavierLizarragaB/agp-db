{
    "steps": [{
        "id": "install_react_app_dependencies",
        "name": "node",
        "dir": "client",
        "entrypoint": "npm",
        "args": ["install"]
    }, {
        "id": "add_env_variables",
        "name": "gcr.io/cloud-builders/gcloud",
        "entrypoint": "bash",
        "args": ["-c", "sed -e '/%FLASK_TOKEN%/'$_FLASK_TOKEN -e '/%SECRET_KEY%/'$_SECRET_KEY -e '/%MONGO_URI%/'$_MONGO_URI app.yaml"]
    }, {
        "id": "build_react_app",
        "name": "node",
        "dir": "client",
        "entrypoint": "npm",
        "args": ["run", "build"]
    }, {
        "id": "deploy",
        "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
        "entrypoint": "gcloud",
        "args": ["app", "deploy"]
    }]
}